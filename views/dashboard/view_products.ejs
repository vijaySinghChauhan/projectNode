<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>


    <div class="container-fluid bg-black">

        <div class="col-12">
            <%- include('header.ejs'); %> 
        </div>
        <div class="row">
          <div class="col-3  bg-black text-white">
           <%- include('left.ejs'); %>
          </div>
          <div class="col-9  bg-black ">

            <% if(product_data.length>0) %>
            <table class="table table-bordered table table-dark">
                <thead>
             
                  <tr>
                    <th scope="col">S.N </th>
                    <th scope="col">PRODUCT ID</th>
                    <th scope="col">PRODUCT NAME</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">CATEGORY</th>
                    <th scope="col">PRICE</th>
                    <th scope="col">DISCOUNT</th>
                    <th scope="col">MODIFY</th>
                  </tr>
                </thead>
            
                <tbody>
                    <% for(var i=0; i<product_data.length; i++ ){ %>
                  <tr>
                    <th scope="row"> <%= (i+1) %></th>
                    <td><%= product_data[i].product_id %></td>
                    <td><%= product_data[i].product_name %></td>
                    <td><%= product_data[i].available_quantity %></td>
                    <td><%= product_data[i].product_categorie %></td>
                    <td><%= product_data[i].price %></td>
                    <td><%= product_data[i].percentage_discount %></td>
                    <td>
                      <div>
                        <button >Edit</button>
                        <button >Delete</button>
                      </div>
                    </td>
                  </tr>
               <% } %>
                </tbody>
              </table>
  </div>
    </div>
    </body>
    </html>