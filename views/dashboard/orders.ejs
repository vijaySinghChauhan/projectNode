<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid bg-black">

        <div class="col-12">
            <%- include('header.ejs'); %> 
        </div>
        <div class="row">
          <div class="col-3  bg-black text-white">
           <%- include('left.ejs'); %>
          </div>
          <div class="col-9  bg-black text-white">
          
        <h1 class="mb-4 text-white">Order List</h1>
        <ul class="list-group bg-black">
            <!-- Order 1 -->
            <li class="list-group-item bg-black text-white d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Order #12345</h5>
                    <p class="mb-0">Status: <span class="badge bg-success">Delivered</span></p>
                    <small class="text-muted">Delivered on: 2024-12-15</small>
                </div>
                <button class="btn btn-outline-primary btn-sm">View Details</button>
            </li>
            
            <!-- Order 2 -->
            <li class="list-group-item bg-black text-white d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Order #12346</h5>
                    <p class="mb-0">Status: <span class="badge bg-warning">Shipped</span></p>
                    <small class="text-muted">Estimated Delivery: 2024-12-30</small>
                </div>
                <button class="btn btn-outline-primary btn-sm">View Details</button>
            </li>
            
            <!-- Order 3 -->
            <li class="list-group-item bg-black text-white  d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Order #12347</h5>
                    <p class="mb-0">Status: <span class="badge bg-danger">Pending</span></p>
                    <small class="text-muted">Placed on: 2024-12-20</small>
                </div>
                <button class="btn btn-outline-primary btn-sm">View Details</button>
            </li>
        </ul>
 
    </div>
</div></div>
</div>
</div>
</div>
</body>
</html>
